@model CRUD.Models.EditContactViewModelcs

@{
}

<div class="container-md w-75">
    <h1>Hello User 👋, Edit your Contact here.</h1>


    <form method="post" action="View" class="mt-5">

        <div class="mb-3">
            <label for="id" class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly>
        </div>

        <div class="mb-3">
            <label for="name" class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name">
        </div>

        <div class="mb-3">
            <label for="email" class="form-label">Email</label>
            <input type="text" class="form-control" asp-for="Email">
        </div>

        <div class="mb-3">
            <label for="phome" class="form-label">Phone</label>
            <input type="tel" class="form-control" asp-for="Phone">
        </div>

        <div class="mb-3">
            <label for="date" class="form-label">Saved Date</label>
            <input type="date" class="form-control" asp-for="Date" readonly>
        </div>

        <button type="submit" class="btn btn-outline-primary">Save</button>

        <button type="submit" class="btn btn-outline-danger" asp-action="Delete" asp-controller="Contacts">Delete</button>
    </form>
</div>


