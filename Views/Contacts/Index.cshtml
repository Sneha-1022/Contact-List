@model List<CRUD.Models.Domain.Contact>

@{
}

<h1>Contacts</h1>
<div class="container mt-5">
    @if (Model?.Any() == false)
    {
        <h2>Dear User, your Contact List is Empty :(</h2>
    }

    else {

    <table class="table table-hover table-bordered border-primary">
    <tr class="bg-warning">
        <th>Id</th>
        <th>Name</th>
        <th>Email</th>
        <th>Phone</th>
        <th>Saved Date</th>
        <th></th>

    </tr>

        <tbody class="">
          
           

        @foreach (var contact in Model)
        {
            <tr>
                <td>@contact.Id</td>
                <td>@contact.Name</td>
                <td>@contact.Email</td>
                <td>@contact.Phone</td>
                <td>@contact.Date</td>
                <td><a href="Contacts/View/@contact.Id">Edit</a></td>
            </tr>
        }
    </tbody>
</table>
    }

    
</div>
